<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/cadastro.css">
  <link rel="stylesheet" href="/stylesheets/conta.css">
  
  <%- include('./partials/linkBootstrap') %>

    <title>Conta</title>
</head>

<body>

  <%- include('./partials/header') %>

    <main>

      <div class="inform1">

        <div class="d-flex justify-content-center">
          <h3>Dados da conta</h3>
        </div>


        <form action="/usuarios/<%= user.id %>/edit?_method=PUT" method="post" autocomplete="off">
          
          <div class="d-flex justify-content-end">
            <div class="inputSeparar"> <label for="">Username: </label> <input type="text" name="username" value="<%= user.username %>"
              class="inputCadastro"></div>
              </div>
              
              <div class="d-flex justify-content-end">
                <div class="inputSeparar"> <label for="">Nome: </label> <input type="text" name="nome" value="<%= user.nome %>"
                  class="inputCadastro"></div>
                </div>
                
                <div class="d-flex justify-content-end">
                  <div class="inputSeparar"> <label for="">Sobrenome:</label> <input type="text" name="sobrenome" value="<%= user.sobrenome %>"
                    class="inputCadastro"></div>
                  </div>

                  <div class="d-flex justify-content-end">
                    <div class="inputSeparar"> 
                      <label for="">Data de Nascimento:</label> 
                      <input type="date" name="data_nascimento" value="<%= user.data_nascimento %>" class="inputCadastro" id="data">
                    </div>
                  </div>
                  
              <div class="d-flex justify-content-end">
                <div class="inputSeparar ema"> 
                  <label for="">Email:</label> 
                  <div class="inputCadastro">
                    <p><%= user.email %></p>
                  </div>
                </div>
              </div>
          <div class="d-flex justify-content-end">
            <div class="inputSeparar"> <label for="">Telefone:</label> <input type="text" name="telefone" value="<%= user.telefone %>"
                class="inputCadastro"></div>
          </div>

        </div>
      </div>
    
      
    <div class="inform2">
      
      <div class="d-flex justify-content-center">
        <h3>Endereço</h3>
      </div>
      
      <div class="d-flex justify-content-end">
        <div class="inputSeparar"> <label for="">CEP:</label> 
          <input type="text" name="cep" class="inputCadastro" value="<%= user.cep %>">
        </div>
      </div>
      
      <div class="d-flex justify-content-end">
        <div class="inputSeparar"> <label for="">Endereço:</label> <input type="text" name="endereco" value="<%= user.endereco %>"
            class="inputCadastro"> </div>
      </div>
      
      <div class="d-flex justify-content-end">
        <div class="inputSeparar"> <label for="">Estado:</label>
          <select name="estado" class="inputCadastro">
            <option value="<%= user.estado %>"> <%= user.estado %></option>
            <option value="AC">Acre</option>
            <option value="AL">Alagoas</option>
            <option value="AP">Amapá</option>
            <option value="AM">Amazonas</option>
            <option value="BA">Bahia</option>
            <option value="CE">Ceará</option>
            <option value="DF">Distrito Federal</option>
            <option value="ES">Espírito Santo</option>
            <option value="GO">Goiás</option>
            <option value="MA">Maranhão</option>
            <option value="MT">Mato Grosso</option>
            <option value="MS">Mato Grosso do Sul</option>
            <option value="MG">Minas Gerais</option>
            <option value="PA">Pará</option>
            <option value="PB">Paraíba</option>
            <option value="PR">Paraná</option>
            <option value="PE">Pernambuco</option>
            <option value="PI">Piauí</option>
            <option value="RJ">Rio de Janeiro</option>
            <option value="RN">Rio Grande do Norte</option>
            <option value="RS">Rio Grande do Sul</option>
            <option value="RO">Rondônia</option>
            <option value="RR">Roraima</option>
            <option value="SC">Santa Catarina</option>
            <option value="SP">São Paulo</option>
            <option value="SE">Sergipe</option>
            <option value="TO">Tocantins</option>
          </select>
        </div>
        </div>
        
        <div class="d-flex justify-content-end">
          <div class="inputSeparar">
            <label for="">Cidade:</label> 
            <input type="text" name="cidade" value="<%= user.cidade %>" class="inputCadastro">
          </div>
        </div>
        
        <div class="d-flex justify-content-end">
          <div class="inputSeparar"> <label for="">Bairro:</label> <input type="text" name="bairro" value="<%= user.bairro %>"
            class="inputCadastro"></div>
          </div>
          
          <div class="d-flex justify-content-end">
            <div class="inputSeparar"> <label for="">Referência:</label> <input type="text" name="referencia" value="<%= user.referencia %>"
              class="inputCadastro"></div>
            </div>
            
            
            <div class="d-flex justify-content-end">
        
          
        </div>
        
          <div class="d-flex justify-content-center">
            <div class="inputSeparar"> <label for="">Numero:</label> <input type="text" name="numero" value="<%= user.numero %>" class="inputNumero">
            </div>
            <div class="inputSeparar"> <label for="">Complemento:</label> <input type="text" name="complemento" value="<%= user.complemento %>"
                class="inputComplemento"></div>
          </div>
        
        <div class="d-flex justify-content-center"> <button id="salvar" type="submit">Salvar</button> </div>
        
      </form>
      
      <form action="/usuario/sair" method="post">
        <div class="d-flex justify-content-center"> 
          <button id="btnBack" type="submit">Sair da conta</button> 
        </div>
      </form>
    </div>
    
    <script src="js/cadastro.js"></script>
    </main>
    
    <%- include('./partials/footer') %>
    
  </body>
  
</html>

